<!DOCTYPE html>
<html>
  <head>
    <title>ENews</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </head>

  <body>
  	<div class="container"><!-- container starts here -->

  		<!-- ========================
  		logo area
  		===================== -->
  		<div id="logo">
  			<div class="row">
				  <div class="col-md-4"><%=image_tag("news.png", class: "img-responsive ")%></div>
				  <div class="col-md-4"></div>
				  <div class="col-md-4" id="logo_right"><!-- search area starts here -->
				  	
				  	</br></br></br></br>

				  	<div class="search_block">
					  	<%= form_tag("/articles", method: "get") do %>
							 	<%= text_field_tag(:q, nil, class: "form-control search_area",placeholder: "Search") %>
							  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
  							  <span class="glyphicon glyphicon-search"></span> 
  							<% end %>
							<% end %>
						</div>
				  </div>
				</div>
			</div>
				
			<!-- ========================
  		nav bar
  		===================== -->
  		<nav class="navbar navbar-inverse">
			  <div class="container-fluid">
			    <div class="navbar-header">
			      <a class="navbar-brand" href="#">Enews</a>
			    </div>
			    <ul class="nav navbar-nav">
			      <li class="active"><%= link_to 'HOME',root_path%></li>
			      <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Category<span class="caret"></span></a>
			        <ul class="dropdown-menu">
			          <li><%= link_to 'Tech',tech_path%></li>
				        <li><%= link_to 'World',world_path%></li>
				        <li><%= link_to 'Health',health_path%></li>
				        <li><%= link_to 'Sports',sports_path%></li>
				        <li><%= link_to 'Business',business_path%></li>
			        </ul>
			      </li>
			      <li><%= link_to 'Contact us',sections_contact_path%></li>
			    </ul>
			    <ul class="nav navbar-nav navbar-right">
			      <li>
			      	<%= link_to new_user_registration_path do %>
							  <i class="glyphicon glyphicon-user"></i> Sign Up
							<% end %>
			      </li>

						<li>
						  <% if user_signed_in? %>
						   	<%= link_to destroy_user_session_path, method: :delete do %>
							    <i class="glyphicon glyphicon-log-in"></i> Logout
								<% end %>
						  <% else %>
						   
						    <%= link_to new_user_session_path do %>
							    <i class="glyphicon glyphicon-log-in"></i> Login
								<% end %>
						  <% end %>
						</li>
			    </ul>
			  </div>
			</nav>







			
  		
  		<div class="articles-area">
  			<% if notice %> 
	  			<div class="alert alert-success glyphicon glyphicon-exclamation-sign fadeout" role="alert">
	  				<%= notice %>
	  			</div>
				<% end %>

				<% if alert %>
	  			<div class="alert alert-danger glyphicon glyphicon-exclamation-sign fadeout" role="alert">
	  				<%= alert %>
					</div>
				<% end %>

  			<%= yield %>
  		</div>

  	</div><!-- container ends here -->
   
		<div class="footer">
			&#169; 2017 Easha
		</div>
  </body>
</html>
