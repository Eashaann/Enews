<div class=" row main_area">
  <%@world.each do|world|%> 
  	<h2><%=world.name%></h2> 
    <%=image_tag(world.image_url,class:"img-responsive")%>
    <p class="description_detail"><%=world.description.html_safe%></p> <br>
    <%= "#{time_ago_in_words(world.created_at)} ago" %><hr>
  <%end%>
</div>
  
<%= render 'articles/featured', featured: @featured %>

