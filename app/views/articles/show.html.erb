<div class="show_page">
	<h2><%=@article.name%></h2> <br>
    <%=image_tag(@article.image_url,class: "img-responsive show-img")%>

    <p class="description_detail"> <%= @article.description.html_safe %></p> <br>
    <%= "#{time_ago_in_words(@article.created_at)} ago" %><hr>
  
  <% if current_user != nil && current_user.admin? %>
		<%= link_to 'Edit', edit_article_path(@article) %> |
	<%end%>
	<%= link_to 'Back', articles_path %>
</div><br><br>

<%= render 'featured', featured: @featured %>
